<!doctype html>
<html lang="en">

    <style>
        .set {
            background-color: gray;
        }
    </style>

    {% include 'partials/head.twig' %}
    <body class="set">
        {% include 'partials/navigation.twig' %}

        <!-- Page Content -->
        <div class="container">

            <div class="row">
                {% include 'partials/category.twig' %}


                <!-- /.col-lg-3 -->

                <div class="col-lg-9">
                    <div class="caras">
                        {% include 'partials/carousel.twig' %}

                    </div>
                    <div class="row1">

                        <div class="col-md-10">
                            <div class="row">
                                {% set count = products | length %}
                                <div class="col">
                                    <h6>
                                        <span class="badge badge-primary">{{count}}</span>
                                        products found
                                    </h6>
                                </div>
                            </div>
                            <div class="row">
                                {% for product in products %}
                                    {% include 'partials/item.twig' %}

                                {% endfor %}
                            </div>
                        </div>

                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.col-lg-9 -->

            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

        <!-- Footer -->
        <footer class="py-5 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
            </div>
            <!-- /.container -->
        </footer>


        <!-- Bootstrap core JavaScript -->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    </body>
</html>
